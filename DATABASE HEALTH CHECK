SPOOL /home/oracle/DBHealthcheck_AMSDB1_05JUN2024.html REP;
SELECT * FROM gV$DATABASE;
SELECT * FROM gV$INSTANCE;
SELECT * FROM gV$VERSION;
SELECT * FROM V$CONTROLFILE;
SELECT * FROM gV$LOG;
SELECT * FROM gV$LOGFILE order by 1;
SELECT * FROM V$RECOVER_FILE;
SELECT FILE#,ERROR,FUZZY FROM V$DATAFILE_HEADER;
SELECT * FROM DBA_DATA_FILES ORDER BY FILE_NAME;
SELECT * FROM DBA_TEMP_FILES ORDER BY FILE_NAME;
SELECT FILE_NAME,STATUS,BYTES/1024/1024 SIZE_MB FROM DBA_DATA_FILES ORDER BY FILE_NAME;
SELECT USERNAME,STATUS, COUNT(*) FROM gV$SESSION WHERE USERNAME IS NOT NULL GROUP BY USERNAME,STATUS;
SELECT USERNAME ,INST_ID,COUNT(*) FROM GV$SESSION group by username,inst_id order by username;
ARCHIVE LOG LIST;
SHOW PARAMETER BACKGROUND;
SHOW PARAMETER;
SELECT PROCESS,STATUS,STATE FROM V$ARCHIVE_PROCESSES;
SELECT FILE_NAME FROM DBA_DATA_FILES;
SELECT DISTINCT STATUS FROM V$BACKUP;
SELECT DISTINCT STATUS FROM V$DATAFILE;
SELECT DISTINCT STATUS FROM V$DATAFILE_HEADER;
SELECT * FROM V$RECOVER_FILE;
SELECT  INST_ID,DBID,NAME, OPEN_MODE,database_role FROM gV$DATABASE;
